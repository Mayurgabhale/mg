const handlePartitionChange = newPartition => {
  if (!newPartition) return navigate('/');

  // Check for exact path match before redirect
  const currentPath = window.location.pathname; // e.g. "/partition/US.CO.OBS"
  const targetPartitionPath = `/partition/${encodeURIComponent(newPartition)}`;

  if (newPartition === 'US.CO.OBS' && currentPath === targetPartitionPath) {
    window.location.href = 'http://10.199.22.57:3012/';
    return; // stop further navigation
  }

  // Regular navigation
  let path = targetPartitionPath;

  // Preserve history view if applicable
  if (isHistoryPage) path += '/history';

  navigate(path);
};