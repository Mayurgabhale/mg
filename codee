const matchesFilterZone = (member, zone) => {
  if (!zone) return true;

  const normalize = (s) =>
    String(s || "")
      .toLowerCase()
      .replace(/[–—−\-]/g, " ") // unify dashes
      .replace(/[^a-z0-9\s]/g, " ") // strip punctuation
      .replace(/\s+/g, " ")
      .trim();

  const needle = normalize(zone);
  if (!needle) return true;

  const candidates = [
    member.zone,
    member.Zone,
    member.liveLocation,
    member.location,
    member.Location,
    member.Floor,
    member.floor,
    member["Base Location"],
    member["BaseLocation"],
    member.area,
    member.Area,
    baseLocationByRole[member.role] // ✅ NEW: include default mapping
  ]
    .filter(Boolean)
    .map(normalize);

  return candidates.some((c) => c.includes(needle));
};