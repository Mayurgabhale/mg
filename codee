const HeadcountLabel = ({ x, y, width, height, value }) => {
  if (value === 0) return null; // hide if bar is empty

  return (
    <text
      x={x + width / 2}          // center horizontally
      y={y + height / 2}         // center vertically
      textAnchor="middle"
      fill="#000"                // black so always visible
      fontWeight="bold"
      fontSize={14}
      dominantBaseline="middle"  // vertical align center
    >
      {value}
    </text>
  );
};




...


<Bar
  dataKey="headcount"
  stackId="a"
  fill="url(#headGradient)"
  stroke="#000"
  strokeWidth={1}
>
  <LabelList dataKey="headcount" content={HeadcountLabel} />
</Bar>
