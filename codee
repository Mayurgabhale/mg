const matchesFilterZone = (member, zone) => {
  if (!zone) return true;

  // normalize: lowercase, replace all types of dashes with space, collapse spaces
  const normalize = str =>
    String(str || "")
      .toLowerCase()
      .replace(/[–—-]/g, " ")
      .replace(/\s+/g, " ")
      .trim();

  const needle = normalize(zone);

  const candidates = [
    member.zone,
    member.Zone,
    member.liveLocation,
    member.location,
    member.Location,
    member.Floor,
    member.floor,
    member['Base Location'],
    member['BaseLocation'],
    member.area,
    member.Area
  ]
    .filter(Boolean)
    .map(normalize);

  // check partial match
  return candidates.some(c => c.includes(needle));
};