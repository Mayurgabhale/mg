<TimeTravelControl
  currentTimestamp={timeTravelTimestamp}
  onApply={(iso, local) => {
    fetchSnapshot(iso);
    setTimeTravelTimestamp(local); // store what the user picked, not just UTC
  }}
  onLive={() => clearTimeTravel()}
  loading={timeTravelLoading}
/>



...

function formatLocalInput(local) {
  if (!local) return '';
  const d = new Date(local.replace('T', ' ') + ':00');
  return d.toLocaleString('en-US', {
    month: '2-digit',
    day: '2-digit',
    year: 'numeric',
    hour: '2-digit',
    minute: '2-digit',
    hour12: true,
  });
}


..

<div>
  Viewing historical snapshot for:&nbsp;
  <strong>{formatLocalInput(timeTravelTimestamp)}</strong>
</div>