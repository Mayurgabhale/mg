devices.forEach((device) => {
    // normalize device.type keys so they map to the summary keys
    let typeKey = device.type;
    if (!typeKey) return;

    // If the incoming type is lowercase 'pcdetails', map to camelCase 'pcDetails'
    if (typeKey === "pcdetails") typeKey = "pcDetails";

    // If for some reason other types arrive in different case, try a fallback
    if (!summary.summary[typeKey] && summary.summary[typeKey.toLowerCase()]) {
        typeKey = typeKey.toLowerCase();
    }

    if (!summary.summary[typeKey]) return;

    summary.summary[typeKey].total += 1;
    if (device.status === "online") summary.summary[typeKey].online += 1;
    else summary.summary[typeKey].offline += 1;
});

