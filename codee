{/* Total Members Card */}
<Card
  className="text-center shadow-sm h-100"
  style={{
    backgroundColor: filterType === "total" ? "#0B3D91" : "#061f38", // brighter blue when active
    cursor: "pointer",
    border: filterType === "total" ? "2px solid #F1C40F" : "1px solid transparent",
    transform: filterType === "total" ? "scale(1.05)" : "scale(1)", // + zoom effect
    transition: "all 0.2s ease-in-out", // smooth animation
  }}
  onClick={() => setFilterType("total")}
>






{/* Available Members Card */}
<Card
  className="text-center shadow-sm h-100"
  style={{
    backgroundColor: filterType === "available" ? "#0E6655" : "#061f38", // brighter green when active
    cursor: "pointer",
    border: filterType === "available" ? "2px solid #1ABC9C" : "1px solid transparent",
    transform: filterType === "available" ? "scale(1.05)" : "scale(1)", // + zoom effect
    transition: "all 0.2s ease-in-out",
  }}
  onClick={() => setFilterType("available")}
>