<FormControl fullWidth size="small">
  <InputLabel id="region-select-label" sx={{ color: "black" }}>
    Region
  </InputLabel>
  <Select
    labelId="region-select-label"
    label="Region"
    value={region}
    onChange={(e) => setRegion(e.target.value)}
    sx={{ color: "black" }}
  >
    {REGIONS.map((r) => (
      <MenuItem key={r.value} value={r.value}>{r.label}</MenuItem>
    ))}
  </Select>
</FormControl>

<FormControl fullWidth size="small">
  <InputLabel id="city-select-label" sx={{ color: "black" }}>
    City / Partition
  </InputLabel>
  <Select
    labelId="city-select-label"
    label="City / Partition (optional)"
    value={city}
    onChange={(e) => setCity(e.target.value)}
    renderValue={(v) => v || ""}
    sx={{ color: "black" }}
  >
    <MenuItem value=""><em>All</em></MenuItem>
    {citiesForRegion?.length > 0 ? (
      citiesForRegion.map((c, idx) => (
        <MenuItem key={idx} value={c}>{c}</MenuItem>
      ))
    ) : (
      <MenuItem disabled value="">
        No predefined cities (you can type in the input below instead)
      </MenuItem>
    )}
  </Select>
</FormControl>