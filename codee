// Prefer region totals (authoritative) if available; otherwise fall back to computed filtered totals
const region = window.regionSummary || {};

setSummary("total-devices", "fas fa-network-wired", "Total Devices", region.totalDevices ?? totalDevices);
setSummary("total-online", "fas fa-signal", "Online Devices", region.totalOnline ?? totalOnline);
setSummary("total-cameras", "fas fa-video", "Total Cameras", region.totalCameras ?? totalCameras);
setSummary("total-controllers", "fas fa-microchip", "Total Controllers", region.totalControllers ?? totalControllers);
setSummary("total-archivers", "fas fa-database", "Total Archivers", region.totalArchivers ?? totalArchivers);
setSummary("total-servers", "fas fa-server", "Total Servers", region.totalServers ?? totalServers);
setSummary("total-pcs", "fas fa-desktop", "Total Desktop", region.totalPCs ?? totalPCs);
setSummary("total-dbs", "fas fa-database", "Total DB Server", region.totalDBs ?? totalDBs);