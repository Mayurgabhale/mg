// Interpret "at" as local date in Asia/Kolkata
const atLocal = DateTime.fromJSDate(until, { zone: 'utc' }).setZone('Asia/Kolkata');

// Build that dayâ€™s window in IST
const startLocal = atLocal.startOf('day');
const endLocal   = startLocal.plus({ days: 1 });

const startUTC = startLocal.toUTC().toJSDate();
const endUTC   = endLocal.toUTC().toJSDate();



