/* Container around the two table "cards" */
.tables-row {
  display: grid;
  grid-template-columns: 1fr;   /* default: single column (mobile) */
  gap: 16px;                   /* spacing between cards */
  align-items: start;          /* top-align columns */
  width: 100%;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Each table card (acts like a column) */
.table-card {
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 1px 6px rgba(0,0,0,0.06);
  padding: 12px;
  display: flex;
  flex-direction: column;
  min-height: 120px; /* ensures visible card even if empty */
  overflow: hidden;
}

/* Make table inside card scroll if it's too tall */
.table-card .table-wrapper {
  overflow: auto;
  max-height: 60vh; /* prevents extremely tall tables â€” adjust as needed */
}

/* Responsive breakpoint: show two columns on laptop and bigger */
/* Use 992px (Bootstrap lg) as laptop breakpoint. Change if you prefer 1024px. */
@media (min-width: 992px) {
  .tables-row {
    grid-template-columns: 1fr 1fr; /* two equal columns */
    gap: 20px;
  }
}

/* Optional: tighter layout on very large screens */
@media (min-width: 1400px) {
  .tables-row {
    gap: 24px;
  }
}

/* Accessibility / visual polish */
.table-card h5 {
  margin: 0 0 8px 0;
  font-size: 1rem;
  line-height: 1.2;
}

/* ensure action buttons stay at the bottom if present */
.table-card .card-footer {
  margin-top: auto;
  display:flex;
  justify-content: flex-end;
  gap: 8px;
}

/* Small screen tweaks (optional) */
@media (max-width: 575px) {
  .table-card { padding: 10px; }
}