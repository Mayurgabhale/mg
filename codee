<TableCell
  key={h}
  align="right"
  onClick={() => {
    if (selectedPersonnel === personnelType && !selectedSummaryPartition) {
      setSelectedPersonnel(null);
    } else {
      setSelectedPersonnel(personnelType);
      setSelectedSummaryPartition(null);
      setSelectedCompany(null);
      setShowDetails(true);
    }
  }}
  sx={{
    color: '#000',
    fontWeight: 'bold',
    fontSize: 14,
    border: '2px solid #000',
    cursor: 'pointer',
    '&:hover': { backgroundColor: '#f2f2f2' },
    textAlign: 'right',
    backgroundColor:
      selectedPersonnel === personnelType && !selectedSummaryPartition
        ? '#474747'
        : '#FFC107',
    color:
      selectedPersonnel === personnelType && !selectedSummaryPartition
        ? '#fff'
        : '#000',
  }}
>
  {h}
</TableCell>