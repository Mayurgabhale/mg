// ---- FIXED FILTER HELPER ----
const matchesFilterZone = (member, zone) => {
  if (!zone) return true;
  const needle = String(zone).toLowerCase().trim();

  const candidates = [
    member.zone,
    member.Zone,
    member.liveLocation,
    member.location,
    member.Location,
    member.Floor,
    member.floor,
    member['Base Location'],
    member['BaseLocation'],
    member.area,
    member.Area
  ]
    .filter(Boolean)
    .map(v => String(v).toLowerCase());

  // normalize dash/en-dash and trim
  const normalize = str => str.replace(/[–—-]/g, '-').trim();

  return candidates.some(c => normalize(c).includes(normalize(needle)));
};