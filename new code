<tr>
  <td className="label"><FaClock className="icon time" /> Time</td>
  <td className="value">
    {loc.timestampUTC
      ? loc.timestampUTC.split('T')[1].replace('Z', '') // "16:21:00"
      : '—'}
  </td>
</tr>
